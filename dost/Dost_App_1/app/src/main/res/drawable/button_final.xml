<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/radius" />
                <solid android:color="@color/App_dark_red_final" />
                <padding android:left="@dimen/horizontal_padding"
                    android:top="@dimen/vertical_padding"
                    android:right="@dimen/horizontal_padding"
                    android:bottom="@dimen/vertical_padding" />
            </shape>
        </inset>
    </item>

    <!-- focused state -->
    <item android:state_focused="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/radius" />
                <solid android:color="@color/App_dark_red_final" />
                <padding android:left="@dimen/horizontal_padding"
                    android:top="@dimen/vertical_padding"
                    android:right="@dimen/horizontal_padding"
                    android:bottom="@dimen/vertical_padding" />
            </shape>
        </inset>
    </item>

    <!-- normal state -->
    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/radius" />
                <solid android:color="@color/App_red_final" />
                <padding android:left="@dimen/horizontal_padding"
                    android:top="@dimen/vertical_padding"
                    android:right="@dimen/horizontal_padding"
                    android:bottom="@dimen/vertical_padding" />
            </shape>
        </inset>
    </item>
</selector>