<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/single_question_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/q_tags_sq"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:textColor="@color/micro_text_light"
                android:textStyle="bold"
                android:text="Agriculture, Medical"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q_dot1_sq"
                android:layout_toRightOf="@+id/q_tags_sq"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="*"
                />

            <TextView
                android:id="@+id/q_date_sq"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/q_dot1_sq"
                android:textSize="15dp"
                android:textColor="@color/micro_text_light"
                android:textStyle="bold"
                android:text="5 July"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/q_user_pic_sq"
                android:layout_width="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/q_tags_sq"
                android:textSize="15dp"
                android:src="@drawable/user_dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/q_user_name_sq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/q_user_pic_sq"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/q_tags_sq"
                android:layout_marginTop="5dp"
                android:textColor="@color/micro_text_light"
                android:text="Kaustubh Khare"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/q_title_sq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/micro_text_light"
                android:textStyle="bold"
                android:layout_below="@+id/q_user_name_sq"
                android:text="Shold I buy Criterion on BluRay?"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/q_desc_sq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q_title_sq"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Or is DVD:BluRay::BluRay:4K/8K?#SAT, amirite?Hello, kaustubh, kjslkfls lksdfjlsfsdvdskvbkjsdbvjsnjv sbvhsbd vjks k kdhu sdfg ysgfkskhs  dsvsv"
                android:textColor="#4f4f4f"
                android:textSize="15dp" />

            <!--<TextView
                android:id="@+id/a_static_sq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer:"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/q_desc_sq"
                android:textSize="10dp"
                android:textColor="@color/micro_text_light"/>

            <TextView
                android:id="@+id/a_desc_sq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a_static_sq"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Or is DVD:BluRay::BluRay:4K/8K?#SAT, amirite?Hello, kaustubh, kjslkfls lksdfjlsfsdvdskvbkjsdbvjsnjv sbvhsbd vjks k kdhu sdfg ysgfkskhs  dsvsv"
                android:textColor="#4f4f4f"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/q_upvote_no_sq"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="25"
                android:gravity="center"
                android:textColor="@color/micro_text_light"
                android:background="@drawable/box"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/a_desc_sq"
                android:layout_alignParentRight="true"
                android:textSize="10dp"/>

            <Button
                android:id="@+id/q_upvote_sq"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_below="@+id/q_desc_sq"
                android:text="Upvote"
                android:textColor="@color/micro_text_light"
                android:background="@color/transparent"
                android:layout_toLeftOf="@+id/a_upvote_no_sq"
                android:textSize="10dp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/listview_answers_ll"
                android:layout_below="@id/q_desc_sq"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>

    <ImageButton
        android:layout_margin="15dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action"
        android:background="@drawable/circle_no_shadow"
        android:id="@+id/imageButton2"
        android:layout_gravity="right|bottom" />

</RelativeLayout>